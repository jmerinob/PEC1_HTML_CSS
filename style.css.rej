+/* Modal styles */
+.modalDialog {
+  position: fixed;
+  font-family: Arial, Helvetica, sans-serif;
+  top: 0;
+  right: 0;
+  bottom: 0;
+  left: 0;
+  background: rgba(0, 0, 0, 0.8);
+  opacity: 0;
+  pointer-events: none;
+}
+.modalDialog:target {
+  opacity: 1;
+  pointer-events: auto;
+}
+.modalDialog > div {
+  width: 400px;
+  position: relative;
+  margin: 10% auto;
+  padding: 5px 20px 13px 20px;
+  border-radius: 10px;
+  background: #fff;
+  transition: opacity 400ms ease-in;
+}
+.close {
+  background: #ffffff;
+  color: #ffffff;
+  line-height: 50px;
+  position: absolute;
+  right: -12px;
+  text-align: center;
+  top: -10px;
+  width: 50px;
+  text-decoration: none;
+  font-weight: bold;
+  border-radius: 25px;
+  box-shadow: 1px 1px 3px #000;
+}
+.close:hover {
+  background: #ff0000;
+}
